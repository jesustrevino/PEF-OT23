#: import Factory kivy.factory.Factory

WindowManager:
    MainWindow:
    SecondaryWindow:

<DropdownOptions@SpinnerOption>:
    font_size: 25
    font_name: 'NotoSans-Medium.ttf'
    bold: True
    color: 1,0.54,0,1
    background_color: 0,0,0,0
    background_normal: ''

<SpinnerDropdown@Dropdown>:
    auto_width: True
    background_color: 0,0,0,0
    max_height: 500
    effect_cls: 'ScrollEffect'
    scoll_type: ['bars', 'content']


<CircularProgressBar>:
    canvas.before:
        Color:
            rgba: root.bar_bg_color + [0.3]
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, root.start_value, root.end_value)
    canvas.after:
        Color:
            rgb: root.bar_color
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, root.start_value, root.set_value*3.6*root.tick)
    MDLabel:
        text: root.text
        font_size: root.font_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        halign: 'center'



<MainWindow>:
    name: 'main_window'
    MDFloatLayout:
        size: root.width, root.height/2
        MDRectangleFlatButton:
            id: ble_button
            text: 'CONNECT BLUETOOTH'
            font_size: 32
            bold: True
            pos_hint: {'center_x': 0.5,'center_y':0.8}
            on_release:
                app.connect_ble(*args)

        Spinner:
            id: device_dropdown
            option_cls: "DropdownOptions"
            dropdown_cls: "SpinnerDropdown"
            disabled: False
            text: '...'
            pos_hint: {'center_x': 0, 'center_y': 0}
            size_hint: None, None
            size: 0,0
            on_text: app.dropdown_clicked(*args)
            text_color: 0,0,0,0


        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x':0.5,'center_y':0.5}
            active: False


<SecondaryWindow>:
    name: 'secondary_window'
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        MDBoxLayout:
            size: root.width, root.height*0.3
            orientation: 'vertical'
            padding: '10dp'
            MDCard:
                radius: '10dp'
                padding: '10dp'
                line_color: 1,0.54,0,1
                thickness: 10
                MDLabel:
                    text: 'ADAPTIVE MODE'
                    bold: True
                    font_size: 32
                    font_name: 'NotoSans-Medium.ttf'
                    halign: 'center'
                    pos_hint: {'center_y' : 0.5}
                MDSwitch:
                    id: adapt_switch
                    pos_hint: {'center_x':.5,'center_y':.5}
                    on_active:
                        app.switch_state(*args)
        MDBoxLayout:
            size: root.width, root.height*0.2
            orientation: 'vertical'
            padding: '10dp'
            MDSlider:
                id: adapt_slider
                min: 0
                max: 100
                step: 5
                orientation: 'horizontal'
                padding: '10dp'
                hint: True
                hint_text_color: 'orange'
                hint_bg_color: 'white'
                thumb_color_disabled: 'grey'
                on_value:
                    app.slider_slide(*args)
        MDBoxLayout:
            size: root.width, root.height*0.25
            orientation: 'vertical'
            CircularProgressBar:
                id: speed
                size_hint: None, None
                size: 250,250
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding: 20
                start_value: -90
                end_value: 90
                set_value: -25
                bar_color: 1,0.54,0
                text: '0 km/h'
                font_size: 52
                tick: 1


        MDFloatLayout:
            size: root.width, root.height*0.25
            orientation: 'vertical'
            CircularProgressBar:
                id: circle_progress
                size_hint: None, None
                size: 250, 250
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding: 20
                text: '0%'
                start_value: 0
                font_size: 52
                end_value: 360
                set_value: 0
                tick: 1


